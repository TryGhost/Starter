{{!< default}}

<div class="gh-outer">
<main class="site-main gh-inner">

    {{#tag}}
    <div class="term">
        <span class="backButton tagBackButton" onclick="window.open('{{@site.url}}','_self')">
                <i class="arrowLeft fa-solid fa-arrow-left"></i>
            </span>
        <h1 class="term-name">#{{name}}</h1>
        {{#if description}}
            <p class="term-description">{{description}}</p>
        {{/if}}
    </div>
    {{/tag}}

    <div class="post-feed gh-feed {{#if posts.[1]}}{{else}}two-posts{{/if}}">
        {{#foreach posts}}
            {{> "loop"}}
        {{/foreach}}
    </div>

</main>
</div>